<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |p| %>
  <%= p.label :name %>
  <%= p.text_field :name %>
  <%= p.label :description %>
  <%= p.text_field :description %>
  <%= p.submit %>
  <%= p.label :cost %>
  <%= p.text_field :cost %>
  <%= p.label :country_of_origin %>
  <%= p.text_field :country_of_origin %>
  <%= p.submit %>
<% end %>
